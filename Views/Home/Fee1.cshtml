@Html.Partial("ProgressBar1")

<div class="row text-center">
    <div class="col-12">
        <h1>Your Fees</h1>
        <div>We just need a few more details to calculate your fees.</div>
    </div>
</div>

<hr class="mb-3" />
<div class="row">
    <div class="col col-md-6">

        <div class="mb-3">
            Where are you applying?

            <div class="form-group">
                <div class="custom-control custom-radio">
                    <input id="US" name="applyingFrom" type="radio" class="custom-control-input" checked="" required="">
                    <label class="custom-control-label" for="US">US</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="Canada" name="applyingFrom" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="Canada">Canada</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="OtherOverseas" name="applyingFrom" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="OtherOverseas">Other Overseas</label>
                </div>
            </div>
        </div>

        <div class="alert alert-info d-flex my-4">
            <i class="fas fa-info-circle fa-3x mr-3 align-self-center"></i>
            <div><strong>Note:</strong> Lorem ipsum dolor, sit amet consectetur adipisicing elit. Eveniet laboriosam similique ipsa ipsum nesciunt quis temporibus beatae rerum reiciendis eum pariatur.</div>
        </div>

        <div class="mb-3">
            What processing time would you like?
            <div class="form-group">
                <div class="custom-control custom-radio">
                    <input id="Routine" name="processingTime" type="radio" class="custom-control-input" checked="" required="">
                    <label class="custom-control-label" for="Routine">Routine (4-6 weeks)</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="ExpeditedProcessing" name="processingTime" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="ExpeditedProcessing">Expedited (2-3 weeks)</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="ExpeditedAtAgency" name="processingTime" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="ExpeditedAtAgency">Expedited at Agency (less than 2 weeks)</label>
                </div>
            </div>
        </div>

        <div class="mb-3">
            What shipping method would you like?
            <div class="form-group">
                <div class="custom-control custom-radio">
                    <input id="Regular" name="shippingMethod" type="radio" class="custom-control-input" checked="" required="">
                    <label class="custom-control-label" for="Regular">Regular Delivery</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="ExpeditedDelivery" name="shippingMethod" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="ExpeditedDelivery">1-2 Day Delivery</label>
                </div>
            </div>
        </div>
</div>
<div class="col col-md-6">
    <table class="table" style="border: 2px solid #dee2e6;">
            <thead>
                <tr class="h3">
                    <th scope="col">Fees</th>
                    <th scope="col" class= "text-right">Price</th>
                </tr>
            </thead>
            <tbody class="text-muted">
                <tr>
                    <td>
                        <div class="font-weight-bold">Passport Type</div>
                        <div>Passport Book, Adult</div>
                        <div>Passport Card, Adult</div>
                    </td>
                    <td class="text-right">
                        <div>&nbsp;</div>
                        <div>$110.00</div>
                        <div>$30.00</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Processing</div>
                        <div>Expedited processing</div>
                    </td>
                    <td class="text-right">
                        <div>&nbsp;</div>
                        <div>$60.00</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Shipping</div>
                        <div>1-2 Day Delivery</div>
                    </td>
                    <td class="text-right">
                        <div>&nbsp;</div>
                        <div>$15.89</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="font-weight-bold">Acceptance Fee</div>
                    </td>
                    <td class="text-right">
                        <div>$35.00</div>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr class="h3 font-weight-bold">
                    <td>Total</td>
                    <td class="text-right">$201.66</td>
                </tr>
                <tr class="h4">
                    <td>
                        <div>Payable to State</div>
                        <div>Payable to Acceptance Facility</div>
                    </td>
                    <td class="text-right">
                        <div>$166.66</div>
                        <div>$35.00</div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section ScriptIncludes
{
    <script type="text/javascript">
        $("#pw-progress-bar").addClass("d-flex flex-row mb-4");
        $(".pw-progress-bar-step").addClass("text-center text-black rounded py-3");
    </script>
}